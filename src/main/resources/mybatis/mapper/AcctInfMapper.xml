<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="AcctInfMapper">
    <select id="getAllAcct" resultType="AcctInf">
        select * from acct_inf;
    </select>

    <insert id="addAcct" parameterType="AcctInf">
        insert into acct_inf (user_no, amt) values (#{userNo}, #{amt});
    </insert>

    <update id="updateAcctById" parameterType="AcctInf">
        update acct_inf set user_no=#{userNo}, amt=#{amt} where id = #{id};
    </update>

    <delete id="deleteAcctById">
        delete from acct_inf where id = #{id};
    </delete>

</mapper>
